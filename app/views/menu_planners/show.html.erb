<p id="notice"><%= notice %></p>
<p>
  <strong>Date:</strong>
  <%= @menu_planner.date %>
</p>

<p>
  <strong>Dish type:</strong>
    <% if @menu_planner.dish_type== 1 %>
      Breakfast
        <% elsif @menu_planner.dish_type== 2 %>
          Lunch
            <% else @menu_planner.dish_type== 3 %>
              Dinner
      <% end %>
</p>

<p>
  <strong>Dish:</strong>
  <%= link_to @menu_planner.dish.dname, dish_path(@menu_planner.dish) %>
</p>

